{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "KONAMI_ENABLE_LTO": "ON",
                "KONAMI_STATIC_LINKING": "ON"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (VS 2026)",
            "inherits": "default",
            "generator": "Visual Studio 18 2026",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "KONAMI_BUILD_TESTS": "ON",
                "KONAMI_ENABLE_ASAN": "ON",
                "KONAMI_ENABLE_VULKAN": "ON",
                "KONAMI_ENABLE_DIRECTX": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (VS 2026)",
            "inherits": "default",
            "generator": "Visual Studio 18 2026",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "KONAMI_BUILD_TESTS": "OFF",
                "KONAMI_ENABLE_VULKAN": "ON",
                "KONAMI_ENABLE_DIRECTX": "ON",
                "KONAMI_NATIVE_OPTIMIZATIONS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug (Ninja)",
            "inherits": "default",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "g++",
                "KONAMI_BUILD_TESTS": "ON",
                "KONAMI_ENABLE_ASAN": "ON",
                "KONAMI_ENABLE_VULKAN": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release (Ninja)",
            "inherits": "default",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++",
                "KONAMI_BUILD_TESTS": "OFF",
                "KONAMI_ENABLE_VULKAN": "ON",
                "KONAMI_NATIVE_OPTIMIZATIONS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug (Ninja)",
            "inherits": "default",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "clang++",
                "KONAMI_BUILD_TESTS": "ON",
                "KONAMI_ENABLE_METAL": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release (Ninja)",
            "inherits": "default",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "clang++",
                "KONAMI_BUILD_TESTS": "OFF",
                "KONAMI_ENABLE_METAL": "ON",
                "KONAMI_NATIVE_OPTIMIZATIONS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "configuration": "Release"
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "macos-debug",
            "configurePreset": "macos-debug"
        },
        {
            "name": "macos-release",
            "configurePreset": "macos-release"
        }
    ],
    "testPresets": [
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "macos-debug",
            "configurePreset": "macos-debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
