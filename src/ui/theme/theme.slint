// Global Theme Manager
export global ThemeManager {
    in-out property <int> current-theme: 0; // 0=Cyberpunk, 1=Glass, 2=Aurora, 3=Material, 4=Retro
    
    out property <ThemeColors> colors: 
        current-theme == 0 ? CyberpunkTheme.colors :
        current-theme == 1 ? GlassmorphismTheme.colors :
        current-theme == 2 ? AuroraTheme.colors :
        current-theme == 3 ? MaterialTheme.colors :
        RetroArcadeTheme.colors;
    
    out property <Typography> typography: {
        font-family: "Inter",
        font-family-mono: "JetBrains Mono",
        font-size-xs: 10px,
        font-size-sm: 12px,
        font-size-base: 14px,
        font-size-lg: 16px,
        font-size-xl: 18px,
        font-size-2xl: 24px,
        font-size-3xl: 30px,
        font-size-4xl: 36px,
        font-weight-normal: 400,
        font-weight-medium: 500,
        font-weight-semibold: 600,
        font-weight-bold: 700,
        line-height: 1.5,
    };
    
    out property <Spacing> spacing: {
        xs: 4px,
        sm: 8px,
        md: 16px,
        lg: 24px,
        xl: 32px,
        xxl: 48px,
    };
    
    out property <Radius> radius: {
        none: 0px,
        sm: 4px,
        md: 8px,
        lg: 12px,
        xl: 16px,
        full: 9999px,
    };
    
    out property <Animation> animation: {
        duration-fast: 150ms,
        duration-normal: 300ms,
        duration-slow: 500ms,
        easing-default: ease-in-out,
        easing-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55),
    };
    
    public function set-theme(theme-index: int) {
        current-theme = theme-index;
    }
    
    public function next-theme() {
        current-theme = mod(current-theme + 1, 5);
    }
}
