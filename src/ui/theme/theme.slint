// Konami Client - Theme System
// Dynamic theming with multiple presets and customization

// Color structure for themes
export struct ThemeColors {
    // Primary colors
    primary: color,
    primary-hover: color,
    primary-active: color,
    primary-foreground: color,
    
    // Secondary colors
    secondary: color,
    secondary-hover: color,
    secondary-foreground: color,
    
    // Accent colors
    accent: color,
    accent-hover: color,
    accent-foreground: color,
    
    // Background layers
    background: color,
    background-secondary: color,
    background-tertiary: color,
    
    // Surface colors
    surface: color,
    surface-hover: color,
    surface-active: color,
    
    // Text colors
    foreground: color,
    foreground-muted: color,
    foreground-subtle: color,
    
    // Semantic colors
    success: color,
    success-foreground: color,
    warning: color,
    warning-foreground: color,
    error: color,
    error-foreground: color,
    info: color,
    info-foreground: color,
    
    // Border colors
    border: color,
    border-hover: color,
    border-focus: color,
    
    // Special effects
    glow: color,
    shadow: color,
    overlay: color,
}

// Typography settings
export struct Typography {
    font-family: string,
    font-family-mono: string,
    font-size-xs: length,
    font-size-sm: length,
    font-size-base: length,
    font-size-lg: length,
    font-size-xl: length,
    font-size-2xl: length,
    font-size-3xl: length,
    font-size-4xl: length,
    font-weight-normal: int,
    font-weight-medium: int,
    font-weight-semibold: int,
    font-weight-bold: int,
    line-height: float,
}

// Spacing scale
export struct Spacing {
    xs: length,
    sm: length,
    md: length,
    lg: length,
    xl: length,
    xxl: length,
}

// Border radius
export struct Radius {
    none: length,
    sm: length,
    md: length,
    lg: length,
    xl: length,
    full: length,
}

// Animation settings
export struct Animation {
    duration-fast: duration,
    duration-normal: duration,
    duration-slow: duration,
    easing-default: easing,
    easing-bounce: easing,
}

// Complete theme structure
export struct Theme {
    name: string,
    colors: ThemeColors,
    typography: Typography,
    spacing: Spacing,
    radius: Radius,
    animation: Animation,
}

