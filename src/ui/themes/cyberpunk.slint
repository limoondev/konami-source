        gradient-start: #00f5ff,
        gradient-mid: #7f00ff,
        gradient-end: #ff00aa,
        
        // ─────────────────────────────────────────────────────────────────────
        // Special UI Elements
        // ─────────────────────────────────────────────────────────────────────
        scrollbar-track: #111827,
        scrollbar-thumb: #334155,
        scrollbar-thumb-hover: #00f5ff,
        
        tooltip-bg: #1e293bF0,
        tooltip-text: #f0f4f8,
        
        skeleton-base: #1e293b,
        skeleton-shine: #334155,
        
        code-bg: #0d1117,
        code-text: #f0f4f8,
        code-keyword: #ff00aa,
        code-string: #00ff88,
        code-number: #fff000,
        code-comment: #64748b,
    };
}

// Apply Cyberpunk theme when active
export global ApplyCyberpunkTheme {
    init => {
        if Theme.active-theme-index == 0 {
            Theme.colors = CyberpunkTheme.colors;
        }
    }
}
